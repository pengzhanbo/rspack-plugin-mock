{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "exclude": [
    "examples/**",
    "dist/**"
  ]
}
